<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="AprendendoPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>modelo.Pais</class>
    <class>modelo.Estado</class>
    <class>modelo.Cidade</class>
    <class>modelo.Endereco</class>
    <class>modelo.Pessoa</class>
    <class>modelo.PessoaFisica</class>
    <class>modelo.Arquivo</class>
    <class>modelo.Categoria</class>
    <class>modelo.Compra</class>
    <class>modelo.CompraItem</class>
    <class>modelo.Contato</class>
    <class>modelo.Foto</class>
    <class>modelo.Marca</class>
    <class>modelo.Parcela</class>
    <class>modelo.Permissao</class>
    <class>modelo.PessoaJuridica</class>
    <class>modelo.Produto</class>
    <class>modelo.Venda</class>
    <class>modelo.VendaItem</class>
    <class>modelo.TipoEndereco</class>
    <properties>
      <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
      <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
      <!--<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>-->
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/aprendendojpa"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.password" value="123456"/>
      <property name="hibernate.connection.autocommit" value="false"/>
      <property name="hibernate.hbm2ddl.auto" value="update"/>
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.format_sql" value="true"/>
    </properties>
  </persistence-unit>
</persistence>
